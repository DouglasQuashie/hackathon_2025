// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Chat {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  username  String
  zone      String
  content   String
}

model Zone {
  id         String      @id @default(uuid())
  name       String
  edge1      String
  edge2      String
  edge3      String
  edge4      String
  edge5      String
  zoneEvents ZoneEvent[]
}

model ZoneEvent {
  idZone String
  zone   Zone   @relation(fields: [idZone], references: [id])

  idEvent String
  event   Event  @relation(fields: [idEvent], references: [id])

  @@id([idZone, idEvent])
}

model Event {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())

  title      String
  status     String
  content    String
  type       String
  zoneEvents ZoneEvent[]
}
